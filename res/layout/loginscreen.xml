<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <Button
                android:layout_width="wrap_content"
                android:minWidth="150dp"
                android:layout_height="wrap_content"
                android:text="@string/Login_Page.login_button"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:id="@+id/login_page_button"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/login_page_button"
                android:id="@+id/login_page_password_editText"
                android:layout_margin="10dp"
                android:hint="@string/Login_Page.login_password_hint"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/login_page_password_editText"
                android:layout_centerHorizontal="true"
                android:id="@+id/login_page_id_editText"
                android:layout_marginBottom="10dp"
                android:layout_margin="10dp"
                android:hint="@string/Login_Page.login_id_hint"/>


</RelativeLayout>